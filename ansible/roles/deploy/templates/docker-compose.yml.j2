services:
  hms-frontend:
    image: jakkulavamsi/hms-frontend:latest
    restart: unless-stopped
    ports:
      - "{{ frontend_port }}:80"
    depends_on:
      hms-backend:
        condition: service_healthy
    networks:
      - app-network
    environment:
      - VITE_API_BASE_URL={{ backend_url | default('http://localhost:9091') }}
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost/ || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  hms-backend:
    image: jakkulavamsi/hms-backend:latest
    restart: unless-stopped
    ports:
      - "{{ backend_port }}:5000"
    depends_on:
      hms-db:
        condition: service_healthy
    environment:
      - DATABASE_URL=jdbc:mysql://hms-db:3306/hms_db?autoReconnect=true&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC&connectTimeout=60000&socketTimeout=60000
      - DB_USERNAME={{ db_username | default('user') }}
      - DB_PASSWORD={{ db_password | default('password') }}
      - PORT=5000
      - JWT_SECRET={{ jwt_secret | default('mySuperSecretKeyThatIsAtLeast32CharactersLongForJWT') }}
      - CORS_ALLOWED_ORIGINS={{ cors_origins | default('http://localhost:3000,http://localhost:5173') }}
    networks:
      - app-network
    healthcheck:
      test: ["CMD-SHELL", "ps aux | grep -q '[j]ava.*app.jar' || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 90s

  hms-db:
    image: mysql:8.0
    restart: unless-stopped
    ports:
      - "{{ db_port }}:3306"
    environment:
      - MYSQL_ROOT_PASSWORD={{ db_root_password | default('password') }}
      - MYSQL_DATABASE=hms_db
      - MYSQL_USER={{ db_username | default('user') }}
      - MYSQL_PASSWORD={{ db_password | default('password') }}
    volumes:
      - mysql_data:/var/lib/mysql
    command: --default-authentication-plugin=mysql_native_password --wait-timeout=28800 --interactive-timeout=28800
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-p{{ db_root_password | default('password') }}"]
      interval: 10s
      timeout: 5s
      retries: 10
      start_period: 30s
    networks:
      - app-network

volumes:
  mysql_data:

networks:
  app-network:
    driver: bridge

